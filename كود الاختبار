# test_calculator.py

from calculator import add, subtract, multiply, divide

# اختبار الجمع
assert add(2, 3) == 5
assert add(-1, 1) == 0

# اختبار الطرح
assert subtract(5, 3) == 2

# اختبار الضرب
assert multiply(4, 3) == 12

# اختبار القسمة
assert divide(10, 2) == 5
assert divide(5, 0) == "خطأ: قسمة على صفر"

print("✅ جميع الاختبارات نجحت بنجاح")

# برنامج آلة حاسبة بسيطة

# عرض العمليات المتاحة للمستخدم
print("اختر العملية:")
print("1- جمع")
print("2- طرح")
print("3- ضرب")
print("4- قسمة")

# أخذ اختيار المستخدم
choice = input("أدخل رقم العملية (1/2/3/4): ")

# إدخال الرقمين من المستخدم وتحويلهم إلى أعداد عشرية
num1 = float(input("أدخل الرقم الأول: "))
num2 = float(input("أدخل الرقم الثاني: "))

# استخدام جملة شرطية لتحديد العملية المطلوبة
if choice == '1':
    result = num1 + num2
    print("الناتج =", result)

elif choice == '2':
    result = num1 - num2
    print("الناتج =", result)

elif choice == '3':
    result = num1 * num2
    print("الناتج =", result)

elif choice == '4':
    # التحقق من عدم القسمة على صفر
    if num2 != 0:
        result = num1 / num2
        print("الناتج =", result)
    else:
        print("خطأ: لا يمكن القسمة على صفر")

else:
    print("اختيار غير صحيح")
